<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="0dp">

    <ImageView
        android:id="@+id/iconMainimageView"
        android:layout_width="107dp"
        android:layout_height="111dp"
        app:srcCompat="@android:drawable/ic_menu_myplaces" />

    <TextView
        android:id="@+id/titleMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API Events"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/subtitleMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Persons and Places manager"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="71dp" />

    <Button
        android:id="@+id/personsMainTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="175dp"
        android:padding="15dp"
        android:text="Persons"
        android:textAlignment="center"
        android:textSize="28sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <Button
        android:id="@+id/placesMainTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minWidth="175dp"
        android:padding="15dp"
        android:text="Places"
        android:textAlignment="center"
        android:textSize="28sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp" />


</LinearLayout>
